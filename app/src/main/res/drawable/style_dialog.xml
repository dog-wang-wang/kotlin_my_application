<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item > <!-- 调整描边宽度 -->
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/color_blue_medium"
                android:endColor="@color/color_blue_mid"
                android:type="linear" />
            <!-- 开始颜色，透明度为50%（128/255）的蓝色 -->
            <!-- 结束颜色，透明度为50%（128/255）的青色 -->
            <corners android:radius="36dp" /> <!-- 与背景圆角半径相同 -->
        </shape>
    </item>
    <item
        android:top="@dimen/border_medium" android:bottom="@dimen/border_medium" android:left="@dimen/border_medium" android:right="@dimen/border_medium">
        <!--圆角样式-->
        <shape
            android:shape="rectangle"
            >
            <corners android:topLeftRadius="28dp"
                android:topRightRadius="28dp"
                android:bottomLeftRadius="28dp"
                android:bottomRightRadius="28dp"/><!--圆角处理-->
            <solid android:color="@color/color_white"/>
        </shape>
    </item>
</layer-list>