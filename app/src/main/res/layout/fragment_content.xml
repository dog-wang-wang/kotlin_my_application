<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/third_radio">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_content_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@drawable/image_dialog"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/third_btn_sound"
                android:layout_width="@dimen/third_btn_size"
                android:layout_height="@dimen/third_btn_size"
                style="@style/Widget.Material3.Button.IconButton"
                android:background="@drawable/style_shape_circle"
                app:backgroundTint="@color/color_white_purple"
                app:icon="@mipmap/ic_difficulty"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/third_btn_repeat"
                android:layout_width="@dimen/third_btn_size"
                android:layout_height="@dimen/third_btn_size"
                style="@style/Widget.Material3.Button.IconButton"
                android:background="@drawable/style_shape_circle"
                app:backgroundTint="@color/color_white_purple"
                app:icon="@mipmap/ic_difficulty"
                android:layout_toLeftOf="@id/third_btn_begin"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/margin_small"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/third_btn_begin"
                android:layout_width="@dimen/third_btn_size"
                android:layout_height="@dimen/third_btn_size"
                style="@style/Widget.Material3.Button.IconButton"
                android:background="@drawable/style_shape_circle"
                app:backgroundTint="@color/color_white_purple"
                app:icon="@mipmap/ic_difficulty"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>