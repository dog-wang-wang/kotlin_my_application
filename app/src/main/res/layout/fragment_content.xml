<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/content_cardView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/third_radio"
        app:strokeWidth="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_content_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@drawable/image_dialog" />

            <LinearLayout
                android:id="@+id/ll_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_background_volumn"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:layout_above="@id/third_btn_sound"
                android:rotation="270"
                android:visibility="invisible"
                android:layout_marginBottom="@dimen/margin_medium"
                >

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/range_slider"
                    android:layout_width="90dp"
                    android:layout_height="300dp"
                    android:orientation="vertical"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"
                    app:thumbColor="@color/color_blue_mid"
                    app:trackColor="@color/color_blue_mid"
                    app:trackHeight="3dp" />
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/third_btn_sound"
                android:layout_width="@dimen/third_btn_size"
                android:layout_height="@dimen/third_btn_size"
                style="@style/Widget.Material3.Button.IconButton"
                android:background="@drawable/style_shape_circle"
                app:backgroundTint="@color/color_white_purple"
                app:icon="@mipmap/ic_volumn"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/third_btn_begin"
                android:layout_width="@dimen/third_btn_size"
                android:layout_height="@dimen/third_btn_size"
                style="@style/Widget.Material3.Button.IconButton"
                android:background="@drawable/style_shape_circle"
                app:backgroundTint="@color/color_white_purple"
                app:icon="@mipmap/ic_pause"
                android:layout_alignParentEnd="true"

                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/margin_small"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/third_btn_repeat"
                android:layout_width="@dimen/third_btn_size"
                android:layout_height="@dimen/third_btn_size"
                style="@style/Widget.Material3.Button.IconButton"
                android:background="@drawable/style_shape_circle"
                app:backgroundTint="@color/color_white_purple"
                app:icon="@mipmap/ic_repeat"
                android:layout_toStartOf="@id/third_btn_begin"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/content_cardView"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <TextView
                tools:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
                android:letterSpacing="0.6"
                android:id="@+id/tv_article_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_text_large_big"
                android:textColor="@color/color_black"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                />
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>