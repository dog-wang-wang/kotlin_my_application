<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/wheel"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="@dimen/padding_medium"
        android:paddingHorizontal="@dimen/padding_big">
        <TextView
            android:id="@+id/tv_cancel_birthday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="start"
            android:textSize="@dimen/size_text_medium"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="生日"
            android:gravity="center"
            android:textSize="@dimen/size_text_medium"/>
        <TextView
            android:id="@+id/tv_confirm_birthday"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_text_medium"
            android:text="确定"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <dev.aige.wheelpicker.widgets.WheelYearPicker
            android:id="@+id/picker_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:wheel_item_text_color="@color/black"
            app:wheel_indicator="true"
            app:wheel_indicator_color="@color/blue_light"/>
        <dev.aige.wheelpicker.widgets.WheelMonthPicker
            android:id="@+id/picker_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:wheel_item_text_color="@color/black"
            app:wheel_indicator="true"
            app:wheel_indicator_color="@color/blue_light"/>
        <dev.aige.wheelpicker.widgets.WheelDayPicker
            android:id="@+id/picker_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:wheel_item_text_color="@color/black"
            app:wheel_indicator="true"
            app:wheel_indicator_color="@color/blue_light"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>